<Window x:Class="AcceptXboxLive.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Grangran Technology" Height="650" Width="1000">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Input -->
            <RowDefinition Height="Auto"/> <!-- Scale -->
            <RowDefinition Height="Auto"/> <!-- SAR -->
            <RowDefinition Height="Auto"/> <!-- Quality -->
            <RowDefinition Height="Auto"/> <!-- Volume -->
            <RowDefinition Height="Auto"/> <!-- Framerate -->
            <RowDefinition Height="Auto"/> <!-- Audio bitrate -->
            <RowDefinition Height="Auto"/> <!-- Audio sample rate -->
            <RowDefinition Height="Auto"/> <!-- Video BSF -->
            <RowDefinition Height="Auto"/> <!-- Audio BSF -->
            <RowDefinition Height="Auto"/> <!-- Extension + Run + Play + Reencode -->
        </Grid.RowDefinitions>

        <!-- Input -->
        <Label Content="Input File:" Grid.Row="0"/>
        <TextBox x:Name="txtInput" Grid.Row="0" Margin="100,0,100,0" Width="400" IsReadOnly="True"/>
        <Button x:Name="btnBrowse" Grid.Row="0" Content="Browse..." Width="80" HorizontalAlignment="Right" Click="btnBrowse_Click"/>

        <!-- Scale -->
        <Label Content="Scale Width:" Grid.Row="1"/>
        <TextBox x:Name="txtWidth" Grid.Row="1" Margin="100,0,0,0" Width="80" Text="800"/>
        <Label Content="Height:" Grid.Row="1" Margin="200,0,0,0"/>
        <TextBox x:Name="txtHeight" Grid.Row="1" Margin="260,0,0,0" Width="80" Text="600"/>

        <!-- SAR -->
        <Label Content="Set SAR:" Grid.Row="2"/>
        <TextBox x:Name="txtSAR" Grid.Row="2" Margin="100,0,0,0" Width="80" Text="0"/>

        <!-- Quality -->
        <Label Content="Quality (q:v):" Grid.Row="3"/>
        <TextBox x:Name="txtQuality" Grid.Row="3" Margin="100,0,0,0" Width="80" Text="31"/>

        <!-- Volume -->
        <Label Content="Volume (dB):" Grid.Row="4"/>
        <TextBox x:Name="txtVolume" Grid.Row="4" Margin="100,0,0,0" Width="80" Text="25"/>

        <!-- Framerate -->
        <Label Content="Framerate (-r):" Grid.Row="5"/>
        <TextBox x:Name="txtFramerate" Grid.Row="5" Margin="100,0,0,0" Width="80" Text="15"/>

        <!-- Audio bitrate -->
        <Label Content="Audio Bitrate (-b:a):" Grid.Row="6"/>
        <TextBox x:Name="txtAudioBitrate" Grid.Row="6" Margin="150,0,0,0" Width="80" Text="8k"/>

        <!-- Audio sample rate -->
        <Label Content="Audio Sample Rate (-ar):" Grid.Row="7"/>
        <TextBox x:Name="txtAudioRate" Grid.Row="7" Margin="150,0,0,0" Width="80" Text="32000"/>

        <!-- Video BSF -->
        <Label Content="Video Bitstream Filter (noise):" Grid.Row="8"/>
        <TextBox x:Name="txtVBSF" Grid.Row="8" Margin="220,0,0,0" Width="80" Text="512"/>

        <!-- Audio BSF -->
        <Label Content="Audio Bitstream Filter (noise):" Grid.Row="9"/>
        <TextBox x:Name="txtABSF" Grid.Row="9" Margin="220,0,0,0" Width="80" Text="256"/>

        <!-- Extension + Run + Play + Reencode -->
        <StackPanel Grid.Row="10" Orientation="Horizontal" Margin="0,10,0,0">
            <Label Content="Output Extension:" VerticalAlignment="Center"/>
            <ComboBox x:Name="cmbExtension" Width="100" Margin="10,0,0,0">
                <ComboBoxItem Content="avi"/>
                <ComboBoxItem Content="mp4"/>
                <ComboBoxItem Content="webm"/>
            </ComboBox>
            <Button x:Name="btnRun" Content="Run" Width="120" Height="40" Margin="20,0,0,0" Click="btnRun_Click"/>
            <CheckBox x:Name="chkPlayAfter" Content="Play output with ffplay after encode" IsChecked="True" Margin="20,10,0,0"/>
            <CheckBox x:Name="chkReencodeFriendly" Content="Re-encode for web/Discord players" IsChecked="False" Margin="20,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
